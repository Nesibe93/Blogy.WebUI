@model Blogy.WebUI.Areas.Writer.Models.DashboardViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Writer/Views/WriterLayout/Index.cshtml";
}

 <div class="content-wrapper pb-0">
<div class="row">

        @await Component.InvokeAsync("_WeatherComponentPartial")
    <div class="col-xl-4 grid-margin stretch-card">
        <!--activity-->
            @await Component.InvokeAsync("_ActivityViewComponentPartial")
        
        <!--activity ends-->
    </div>
</div>

    <div class="row">
        <div class="col-xl-3 col-lg-12 stretch-card grid-margin">
                <div class="col-xl-12 col-md-6 stretch-card grid-margin grid-margin-sm-0 pb-sm-3">
                    <div class="card bg-warning">
                        <div class="card-body px-3 py-4">
                            <div class="d-flex justify-content-between align-items-start">
                                <div class="color-card">
                                    <p class="mb-0 color-card-head">Blog Sayısı</p>
                                    <h2 class="text-white">
                                        @Model.BlogCount
                                    </h2>
                                </div>
                                <i class="card-icon-indicator mdi mdi-basket bg-inverse-icon-warning"></i>
                            </div>
                            <h6 class="text-white">Tüm Bloglar</h6>
                        </div>
                    </div>
                </div>
                <div class="col-xl-12 col-md-6 stretch-card grid-margin grid-margin-sm-0 pb-sm-3">
                    <div class="card bg-danger">
                        <div class="card-body px-3 py-4">
                            <div class="d-flex justify-content-between align-items-start">
                                <div class="color-card">
                                    <p class="mb-0 color-card-head">Gelen Mesaj Sayısı</p>
                                    <h2 class="text-white">
                                    @Model.InboxMessageCount
                                    </h2>
                                </div>
                                <i class="card-icon-indicator mdi mdi-cube-outline bg-inverse-icon-danger"></i>
                            </div>
                            <h6 class="text-white">Tüm Mesajlar</h6>
                        </div>
                    </div>
                </div>
                <div class="col-xl-12 col-md-6 stretch-card grid-margin grid-margin-sm-0 pb-sm-3 pb-lg-0 pb-xl-3">
                    <div class="card bg-primary">
                        <div class="card-body px-3 py-4">
                            <div class="d-flex justify-content-between align-items-start">
                                <div class="color-card">
                                    <p class="mb-0 color-card-head">Gelen Bildirim Sayısı</p>
                                <h2 class="text-white">@Model.NotificationCount</h2>
                                </div>
                                <i class="card-icon-indicator mdi mdi-briefcase-outline bg-inverse-icon-primary"></i>
                            </div>
                            <h6 class="text-white">Tüm Bildirimler</h6>
                        </div>
                    </div>
                </div>
            <div class="col-xl-12 col-md-6 stretch-card grid-margin grid-margin-sm-0 pb-sm-3 pb-lg-0 pb-xl-3">
                    <div class="card bg-success">
                        <div class="card-body px-3 py-4">
                            <div class="d-flex justify-content-between align-items-start">
                                <div class="color-card">
                                    <p class="mb-0 color-card-head">Gelen Yorum Sayısı</p>
                                <h2 class="text-white">@Model.CommentCount</h2>
                                </div>
                                <i class="card-icon-indicator mdi mdi-account-circle bg-inverse-icon-success"></i>
                            </div>
                            <h6 class="text-white">Tüm Yorumlar</h6>
                        </div>
                    </div>
                </div>


        </div>
    </div>
</div>
