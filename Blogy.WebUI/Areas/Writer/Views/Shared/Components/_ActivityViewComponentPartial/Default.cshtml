@* @model Blogy.WebUI.Areas.Writer.Models.DashboardViewModel *@
@model List<Blogy.EntityLayer.Concrete.Notification>
<div class="card">
    <div class="card-body">
        <h4 class="card-title">
            <span class="d-flex justify-content-between">
                <span>Bildirimler</span>
                <br />
                <span class="dropdown dropleft d-block">
                    <span id="dropdownMenuButton1" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                        <span><i class="mdi mdi-dots-horizontal"></i></span>
                    </span>
                    <span class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                        <a class="dropdown-item" href="#">İletişim</a>
                        <a class="dropdown-item" href="#">Yardım/Destek</a>
                        <a class="dropdown-item" href="#">Bize yazın</a>
                    </span>
                </span>
            </span>
        </h4>
        <br />

        @foreach (var item in Model)
        {
            <ul class="gradient-bullet-list border-bottom">
                <li>
                    <h6 class="mb-0">@item.Description</h6>
                    <p class="text-muted">
                        <span>@(((DateTime)item.Date).ToString("dd-MMM-yyyy HH:mm"))</span>

                    </p>
                </li>
            </ul>
                <span class="d-inline-block">
                    <span class="d-flex d-inline-block">
                        <img class="ml-1" src="~/Breeze-Free-Bootstrap-Admin-Template-master/assets/images/faces/face1.jpg" alt="" />
                        <img class="ml-1" src="~/Breeze-Free-Bootstrap-Admin-Template-master/assets/images/faces/face10.jpg" alt="" />
                        <img class="ml-1" src="~/Breeze-Free-Bootstrap-Admin-Template-master/assets/images/faces/face14.jpg" alt="" />
                    </span>
                </span>
        }
        <a class="text-black mt-1 mb-0 d-block h6" href="#">Tümünü Göster <i class="mdi mdi-chevron-right"></i></a>


    </div>
</div>